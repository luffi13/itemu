<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal"
    android:layout_marginBottom="8dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/gambarPerespon"
        android:src="@drawable/pengguna"
        android:background="@android:color/black"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/beritaDirespon"
        android:layout_toRightOf="@+id/gambarPerespon"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="luffi aditya sandy"
            android:textAlignment="center"
            android:id="@+id/namaPerespon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="merespon berita anda pada "
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sab, 09 jan 16 21:00"
            android:textAlignment="center"/>

    </LinearLayout>


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/gambarBeritaDirespon"
        android:src="@drawable/bananalezat"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>